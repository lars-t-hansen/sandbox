with "config/heap_test_config.gpr";
project Heap_Test is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Heap_Test_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("heap_test.adb");

   package Compiler is
      for Default_Switches ("Ada") use Heap_Test_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Heap_Test;
